# Toora v2 — copy to .env and fill every value. NEVER commit .env.

# ── LLM ───────────────────────────────────────────────────────────────────────
# OpenRouter API key — https://openrouter.ai/keys
OPENROUTER_API_KEY=

# ── Database ──────────────────────────────────────────────────────────────────
# Railway PostgreSQL connection string (internal URL preferred for services on Railway)
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/railway

# ── Redis ─────────────────────────────────────────────────────────────────────
# Railway Redis connection string
REDIS_URL=redis://default:password@host:6379

# ── Encryption ────────────────────────────────────────────────────────────────
# Fernet key — generate once: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# ── Service URLs ──────────────────────────────────────────────────────────────
# Public Railway URL of the backend service (no trailing slash)
BACKEND_URL=https://backend-production-xxxx.up.railway.app

# Public Railway URL of the frontend service (used by FastAPI CORS)
FRONTEND_URL=https://frontend-production-xxxx.up.railway.app

# ── Next.js (exposed to browser) ─────────────────────────────────────────────
# Same as BACKEND_URL — Next.js prefix exposes this to the browser bundle
NEXT_PUBLIC_API_URL=https://backend-production-xxxx.up.railway.app

# ── Telegram ──────────────────────────────────────────────────────────────────
# Optional secret header token set when registering the Telegram webhook
TELEGRAM_WEBHOOK_SECRET=
